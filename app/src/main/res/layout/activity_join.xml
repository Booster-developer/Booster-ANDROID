<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/join_name"
        app:layout_constraintTop_toBottomOf="@+id/join_name" />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:hint="이름을 입력해주세요"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textColor="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:hint="아이디를 입력해주세요"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textColor="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/id_chk_btn"
        app:layout_constraintStart_toStartOf="@+id/join_name"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/id_chk_btn"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:background="@drawable/join_btn_1"
        android:gravity="center"
        android:text="중복확인"
        android:textColor="#304fff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/join_id"
        app:layout_constraintEnd_toEndOf="@+id/join_name"
        app:layout_constraintTop_toTopOf="@+id/join_id" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/join_id"
        app:layout_constraintTop_toBottomOf="@+id/join_id" />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:textColor="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/id_chk_btn"
        app:layout_constraintStart_toStartOf="@+id/join_id"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/join_pw_chk"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:hint="비밀번호를 확인해주세요"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:textColor="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/join_pw"
        app:layout_constraintStart_toStartOf="@+id/join_pw"
        app:layout_constraintTop_toBottomOf="@+id/join_pw" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="대학교"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/join_pw_chk"
        app:layout_constraintTop_toBottomOf="@+id/join_pw_chk" />

    <TextView
        android:id="@+id/univSelected"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/join_input"
        android:gravity="center_vertical"
        android:hint="대학교를 선택해주세요"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/univSelectBtn"
        app:layout_constraintStart_toStartOf="@+id/join_pw_chk"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/univSelectBtn"
        android:layout_width="58dp"
        android:layout_height="44dp"
        android:background="@drawable/join_btn_1"
        android:gravity="center"
        android:text="선택"
        android:textColor="#304fff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/univSelected"
        app:layout_constraintEnd_toEndOf="@+id/join_pw_chk"
        app:layout_constraintTop_toTopOf="@+id/univSelected" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:buttonTint="@color/main_color"
        android:text="@string/join_1"
        app:layout_constraintStart_toStartOf="@+id/univSelected"
        app:layout_constraintTop_toBottomOf="@+id/univSelected" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/main_color"
        android:text="@string/join_2"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <Button
        android:id="@+id/join_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/join_btn_2"
        android:text="가입하기"
        android:textColor="#7d7d7d"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_see"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="@+id/univSelectBtn"
        app:layout_constraintTop_toTopOf="@+id/checkBox" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_see"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox2"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/checkBox2" />

    <LinearLayout
        android:id="@+id/univList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="@+id/univSelectBtn"
        app:layout_constraintStart_toStartOf="@+id/univSelected"
        app:layout_constraintTop_toBottomOf="@+id/univSelected">

        <TextView
            android:id="@+id/univ_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:text="숭실대학교"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/univ_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:text="중앙대학교"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/univ_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:text="서울대학교"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/join_pw_chk_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="#f1290a"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/join_pw_chk"
        app:layout_constraintTop_toBottomOf="@+id/join_pw_chk" />

    <TextView
        android:id="@+id/id_chk_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="이미 존재하는 아이디입니다."
        android:textColor="#f1290a"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/join_id"
        app:layout_constraintTop_toBottomOf="@+id/join_id" />

    <TextView
        android:id="@+id/id_chk_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="사용 가능한 아이디입니다."
        android:textColor="#63d920"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/join_id"
        app:layout_constraintTop_toBottomOf="@+id/join_id" />

    <TextView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/join_btn"
        app:srcCompat="@drawable/bg_ffffff_round" />
</androidx.constraintlayout.widget.ConstraintLayout>