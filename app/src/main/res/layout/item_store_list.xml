<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="storeRes"
            type="com.example.booster.data.datasource.model.StoreListData" />

        <variable
            name="vm"
            type="com.example.booster.ui.storeDetail.StoreDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_store_search_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_store_search_iv"
                    android:layout_width="match_parent"
                    android:layout_height="157dp"
                    android:layout_weight="0.8"
                    android:scaleType="centerCrop"
                    android:src="@color/main_color"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/item_store_search_iv_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    setFavStarList="@{vm._favStatus.status}"
                    android:src="@drawable/store_ic_inactive_star"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/item_store_search_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#131313"
                    android:lineSpacingExtra="6sp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:text="@{storeRes.name}"
                    app:layout_constraintTop_toBottomOf="@id/item_store_search_iv"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/item_store_search_tv_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#5f5f5f"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_marginTop="2dp"
                    android:text="숭실대입구역 4번 출구에서 369m"
                    app:layout_constraintTop_toBottomOf="@id/item_store_search_tv_name"
                    app:layout_constraintStart_toStartOf="@id/item_store_search_tv_name" />

                <TextView
                    android:id="@+id/item_store_search_tv_paper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="A4"
                    app:layout_constraintTop_toBottomOf="@id/item_store_search_tv_dist"
                    app:layout_constraintStart_toStartOf="@id/item_store_search_tv_dist" />

                <ImageView
                    android:id="@+id/item_store_search_iv_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store_a_4_line_1"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/item_store_search_tv_paper"
                    app:layout_constraintTop_toTopOf="@id/item_store_search_tv_paper"
                    app:layout_constraintBottom_toBottomOf="@id/item_store_search_tv_paper" />

                <TextView
                    android:id="@+id/item_store_search_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_marginStart="8dp"
                    android:text="흑백 40원"
                    app:layout_constraintStart_toEndOf="@id/item_store_search_iv_div"
                    app:layout_constraintTop_toTopOf="@id/item_store_search_iv_div"
                    app:layout_constraintBottom_toBottomOf="@id/item_store_search_iv_div" />

                <TextView
                    android:id="@+id/item_store_search_tv_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_marginStart="4dp"
                    android:text="컬러 40원"
                    app:layout_constraintStart_toEndOf="@id/item_store_search_tv_price"
                    app:layout_constraintTop_toTopOf="@id/item_store_search_tv_price"
                    app:layout_constraintBottom_toBottomOf="@id/item_store_search_tv_price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="#467fff"
                    android:layout_marginStart="8dp"
                    android:text="양면 할인"
                    app:layout_constraintStart_toEndOf="@id/item_store_search_tv_price2"
                    app:layout_constraintTop_toTopOf="@id/item_store_search_tv_price2"
                    app:layout_constraintBottom_toBottomOf="@+id/item_store_search_tv_price2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/item_store_search_tv_paper"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>