<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/engine_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020.07.15 05:14"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/engine_item_tv_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혜성복사"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="38dp"
        app:layout_constraintStart_toEndOf="@id/engine_item_tv_date"
        app:layout_constraintTop_toTopOf="@id/engine_item_tv_date"
        app:layout_constraintBottom_toBottomOf="@id/engine_item_tv_date"/>

    <TextView
        android:id="@+id/engine_item_tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-500P"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="12sp"
        android:textColor="#ff1200"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintStart_toEndOf="@id/engine_item_tv_store"
        app:layout_constraintTop_toTopOf="@id/engine_item_tv_store"
        app:layout_constraintBottom_toBottomOf="@id/engine_item_tv_store"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>