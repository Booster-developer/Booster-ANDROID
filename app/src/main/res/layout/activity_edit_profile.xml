<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.myPage.EditProfileActivity">

    <TextView
        android:id="@+id/act_edit_profile_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:text="프로필 수정"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_img_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/act_edit_profile_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_img_back" />

    <TextView
        android:id="@+id/act_edit_profile_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_name"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_edt_name" />

    <EditText
        android:id="@+id/act_edit_profile_edt_name"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:hint="이름을 입력해주세요"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_tv_name" />

    <EditText
        android:id="@+id/act_edit_profile_edt_id"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/join_input_unable"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textColor="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_edt_name"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_name"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_tv_id" />

    <TextView
        android:id="@+id/act_edit_profile_tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_id"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_edt_id" />

    <EditText
        android:id="@+id/act_edit_profile_edt_pw_new"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_edt_pw_now"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_pw_now"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_edt_pw_now" />

    <EditText
        android:id="@+id/act_edit_profile_edt_pw_chk"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:hint="비밀번호를 확인해주세요"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_edt_pw_new"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_pw_new"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_edt_pw_new" />

    <TextView
        android:id="@+id/act_edit_profile_tv_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:text="대학교"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_pw_chk"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_edt_pw_chk" />

    <TextView
        android:id="@+id/act_edit_profile_tv_univ_select"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/join_input"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center_vertical"
        android:hint="대학교를 선택해주세요"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/act_edit_profile_tv_univ_select_btn"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_pw_chk"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_tv_univ" />

    <TextView
        android:id="@+id/act_edit_profile_tv_univ_select_btn"
        android:layout_width="58dp"
        android:layout_height="44dp"
        android:background="@drawable/join_btn_1"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center"
        android:text="선택"
        android:textColor="#304fff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/act_edit_profile_tv_univ_select"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_edt_pw_chk"
        app:layout_constraintTop_toTopOf="@+id/act_edit_profile_tv_univ_select" />

    <Button
        android:id="@+id/act_edit_profile_button_edit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/bg_btn_gradation"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:text="수정완료"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/act_edit_profile_ll_univ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_tv_univ_select_btn"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_tv_univ_select"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_tv_univ_select">

        <TextView
            android:id="@+id/act_edit_profile_tv_univ_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:text="숭실대학교"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/act_edit_profile_tv_univ_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:text="중앙대학교"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/act_edit_profile_tv_univ_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:text="서울대학교"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/act_edit_profile_pw_chk_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="#f1290a"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_edt_pw_now"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_edt_pw_now" />

    <TextView
        android:id="@+id/act_edit_profile_pw_chk_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="#f1290a"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_edt_pw_chk"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_edt_pw_chk" />

    <ImageView
        android:id="@+id/act_edit_profile_img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:src="@drawable/nav_btn_back_black"
        app:layout_constraintBottom_toBottomOf="@+id/act_edit_profile_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/act_edit_profile_tv_title" />

    <EditText
        android:id="@+id/act_edit_profile_edt_pw_now"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/join_input"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:hint="현재 비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tab_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/act_edit_profile_edt_id"
        app:layout_constraintStart_toStartOf="@+id/act_edit_profile_edt_id"
        app:layout_constraintTop_toBottomOf="@+id/act_edit_profile_tv_pw" />
</androidx.constraintlayout.widget.ConstraintLayout>